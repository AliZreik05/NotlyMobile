<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <!-- Circle avatar with letter -->
    <TextView
        android:id="@+id/lectureAvatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/circle_avatar"
        android:gravity="center"
        android:text="L"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <!-- Title -->
    <TextView
        android:id="@+id/lectureTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_weight="1"
        android:text="Lecture 1"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <!-- PLAIN DEFAULT CHECKBOX -->
    <CheckBox
        android:id="@+id/lectureCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
