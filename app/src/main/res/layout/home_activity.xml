<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/login_backgroud"
    tools:context=".HomeActivity">

    <!-- TOP BAR (Notly style) -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/logoIcon"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:adjustViewBounds="true"
                android:src="@drawable/logo"
                android:contentDescription="@string/app_name" />
        </LinearLayout>

        <ImageView
            android:id="@+id/homeIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_home"
            app:tint="@android:color/white"
            android:contentDescription="@string/home" />
    </LinearLayout>

    <!-- MAIN CONTENT CARD AREA -->
    <ScrollView
        android:id="@+id/scrollArea"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header text on top of gradient -->
            <TextView
                android:id="@+id/homeTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/home_title_notly"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:paddingTop="8dp"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/homeSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/home_subtitle_notly"
                android:textSize="14sp"
                android:textColor="#E6FFFFFF"
                android:paddingBottom="16dp" />

            <!-- Feature cards container (on top of a lighter surface) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- CARD: Notes Summarizer -->
                <LinearLayout
                    android:id="@+id/cardSummarizer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/result_question_background"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/feature_notes_summarizer_title"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/feature_notes_summarizer_desc"
                        android:textSize="13sp"
                        android:textColor="#666666"
                        android:paddingTop="2dp" />
                </LinearLayout>

                <!-- CARD: Quiz Generator -->
                <LinearLayout
                    android:id="@+id/cardQuiz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/result_question_background"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/feature_quiz_generator_title"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/feature_quiz_generator_desc"
                        android:textSize="13sp"
                        android:textColor="#666666"
                        android:paddingTop="2dp" />
                </LinearLayout>

                <!-- CARD: Flashcard Generator -->
                <LinearLayout
                    android:id="@+id/cardFlashcards"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/result_question_background"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/feature_flashcards_title"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/feature_flashcards_desc"
                        android:textSize="13sp"
                        android:textColor="#666666"
                        android:paddingTop="2dp" />
                </LinearLayout>

                <!-- CARD: Transcriber -->
                <LinearLayout
                    android:id="@+id/cardTranscriber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/result_question_background"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/feature_transcriber_title"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/feature_transcriber_desc"
                        android:textSize="13sp"
                        android:textColor="#666666"
                        android:paddingTop="2dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
